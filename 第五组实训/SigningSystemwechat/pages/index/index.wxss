
#myMap{
  width: 100%;
  height:72%;
  z-index: 1;
  position: absolute;
  top: 10%;
}
.edit{
  position: absolute;
  left: 40%;
  bottom: 5%;
  border-radius: 50% 50%;
  padding: 2% 4%;
  z-index: 1000;
  background-color: blue;
  color: white;
}
.record{
  position: absolute;
  right: 5%;
  bottom: 5%;
  border-radius: 50% 50%;
  padding: 1% 1%;
  z-index: 1000;
  background-color: white;
  width: 7.5%;
  height: 4.5%;
}
.search, .searchInput, .searchSubmit, .getUserInfo, .clickMe{
  position: absolute;
  z-index: 1000;
}
.search{
  top: 2%;
  left: 5%;
  width: 100%;
}
.searchInput{
  top: 0%;
  left: 0%;
  width: 70%;
  border: 1rpx solid grey;
  border-radius: 25rpx 25rpx;
}
.searchSubmit{
  font-size: 25rpx;
  width: 20%;
  top: 1%;
  left: 71%;
  background-color: rgba(0, 0, 0, 0);
}
.getUserInfo{
  left: 5%;
  bottom: 5%;
  border-radius: 50% 50%;
  padding: 1% 1%;
  width: 10%;
  height: 6%;
  background-color: rgba(0, 0, 0, 0);
}
.clickMe{
  top: 0;
  left: 0;
  width: 99%;
  height: 99%;
}